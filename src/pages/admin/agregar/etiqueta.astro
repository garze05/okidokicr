---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import ProtectedRoute from "../../../components/ProtectedRoute";
---

<AdminLayout
  title="Añadir Nueva Etiqueta"
  description="Panel de control para agregar nuevas etiquetas al sitio web de OkiDoki."
>
  <ProtectedRoute client:load>
    <div class="container mx-auto px-4 py-8">
      <div class="mb-6 flex items-center justify-between">
        <h1 class="text-primary text-3xl font-bold">Añadir Nueva Etiqueta</h1>
        <a href="/admin/dashboard" class="btn btn-ghost"> ← Volver al Panel </a>
      </div>

      <div class="bg-base-100 max-w-md rounded-lg p-6 shadow-lg">
        <form id="tag-form" class="space-y-4">
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Nombre de la Etiqueta</span
              >
            </label>
            <input
              type="text"
              id="tag-name"
              name="name"
              placeholder="Ej: Eventos corporativos"
              class="input input-bordered w-full"
              required
            />
            <label class="label">
              <span class="label-text-alt"
                >El slug se generará automáticamente</span
              >
            </label>
          </div>

          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary">
              Crear Etiqueta
            </button>
          </div>
        </form>
      </div>
    </div>
  </ProtectedRoute>
</AdminLayout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("tag-form");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const name = formData.get("name");

      if (!name.trim()) {
        alert("Por favor ingresa un nombre para la etiqueta");
        return;
      }

      try {
        const token = localStorage.getItem("token");
        if (!token) {
          alert("No estás autenticado");
          window.location.href = "/login";
          return;
        }

        const response = await fetch("http://localhost:4000/api/tags", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Authorization: `Bearer ${token}`,
          },
          body: JSON.stringify({ name: name.trim() }),
        });

        if (response.status === 401) {
          localStorage.removeItem("token");
          window.location.href = "/login";
          return;
        }

        if (response.ok) {
          alert("Etiqueta creada con éxito!");
          window.location.href = "/admin/dashboard";
        } else {
          const errorData = await response.json();
          console.error("Error al crear la etiqueta:", errorData);
          alert(`Error al crear: ${errorData.error || response.statusText}`);
        }
      } catch (error) {
        console.error("Error de red o al procesar la solicitud:", error);
        alert("Error de conexión al intentar crear la etiqueta.");
      }
    });
  });
</script>
