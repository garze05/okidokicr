---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// fonts
import '@fontsource/alex-brush';
import '@fontsource/montserrat';
import '@fontsource-variable/lexend';
import '@fontsource-variable/lexend-exa';
import '@fontsource-variable/lexend-giga';

const { title } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/FAVICON.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-no-repeat bg-fixed bg-gradient-to-tl from-indigo-200 via-red-200 to-yellow-100">
		<div class="min-h-[100dvh] grid grid-rows-[auto_1fr_auto]">
			<Header />
				<main class="md:px-4 mx-auto relative">
					<slot />
				</main>
			<Footer />
		</div>
	</body>
</html>
