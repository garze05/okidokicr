---
import "aos/dist/aos.css";

interface Props {
  title: string;
  description?: string;
  bodyClass?: string;
  includeGlobalCSS?: boolean;
  includeFonts?: boolean;
}

const {
  title,
  description = "Empresa de Costa Rica. Ofrecemos Botargas, Fiestas de Cumpleaños, Eventos Familiares y Empresariales con 30 años de Experiencia.",
  bodyClass = "",
  includeGlobalCSS = false,
  includeFonts = false,
} = Astro.props;
---

<html lang="es" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {
      includeGlobalCSS && (
        <link rel="stylesheet" href="/src/styles/global.css" />
      )
    }
    <meta name="generator" content={Astro.generator} />
    <title>OkiDoki - {title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    {
      includeFonts && (
        <>
          <link
            rel="preload"
            href="/fonts/lexend-latin-wght-normal.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
          />
          <link
            rel="preload"
            href="/fonts/lexend-exa-latin-wght-normal.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
          />
          <link
            rel="preload"
            href="/fonts/lexend-giga-latin-wght-normal.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
          />
          <link
            rel="preload"
            href="/fonts/curlzmt.ttf"
            as="font"
            type="font/ttf"
            crossorigin="anonymous"
          />
        </>
      )
    }
  </head>
  <body class={`h-full ${bodyClass}`}>
    <slot />
    <script>
      import AOS from "aos";
      AOS.init();
    </script>
  </body>
</html>

<style>
  /* Queremos prevenir content shift, mostrando siempre la barra de scroll*/
  html {
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    overflow-x: hidden;
    margin: 0;
  }

  body {
    margin: 0;
    overflow: visible;
    min-height: 100%;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Agregar smooth scrolling a cualquier link anchor
    const headerElement = document.querySelector("header");
    const headerHeight = headerElement?.offsetHeight ?? 0;

    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener(
        "click",
        function (this: HTMLAnchorElement, e: MouseEvent) {
          e.preventDefault();
          const href = this.getAttribute("href");
          if (!href) return;

          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);

          if (targetElement) {
            window.scrollTo({
              top: targetElement.offsetTop - headerHeight,
              behavior: "smooth",
            });
          }
        },
      );
    });
  });
</script>
