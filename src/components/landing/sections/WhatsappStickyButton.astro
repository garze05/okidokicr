<!-- Sticky Whatsapp Icon -->
<a
  href={socialLinksList.whatsapp.url}
  class="group fixed right-4 bottom-4 z-50 flex items-center"
  target="_blank"
>
  <div
    class="flex items-center overflow-hidden rounded-full bg-green-500 shadow-2xl transition-all duration-300 group-hover:bg-green-600"
  >
    <div class="flex h-[72px] w-[72px] items-center justify-center">
      <Icon
        name="simple-icons:whatsapp"
        width="40"
        height="40"
        class="text-white"
      />
