---
import Video from "@components/shared/Video.astro";
import testimonios from "@data/testimonials.json";
---

<section class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
  <h1
    data-aos="fade-in"
    class="text-secondary-500 font-primary max-w-full py-5 text-center text-3xl font-medium sm:py-10 sm:text-5xl lg:text-6xl xl:text-7xl"
  >
    TESTIMONIOS <span
      class="from-primary-500 font-okidoki bg-gradient-to-r to-[#FF7E00] bg-clip-text text-7xl text-transparent md:text-8xl lg:text-9xl"
      >oKiDoki</span
    >
  </h1>

  <div class="mx-auto max-w-7xl">
    <!-- Using columns for masonry layout -->
    <div
      class="columns-1 gap-4 sm:columns-2 lg:columns-3 xl:columns-4"
      id="testimonials-gallery"
    >
      {
        testimonios.map((testimonio, index) => (
          <div class="bg-primary-500 mb-4 break-inside-avoid overflow-hidden rounded-lg shadow-lg">
            <div class="group relative h-full w-full">
              <div class="video-container w-full cursor-pointer overflow-hidden">
                <Video
                  publicId={testimonio.videoId}
                  orientation={testimonio.orientation || "landscape"}
                />
              </div>
              <div class="p-4 text-white">
                <h3 class="text-lg font-semibold">{testimonio.title}</h3>
                {testimonio.author && (
                  <p class="text-sm">{testimonio.author}</p>
                )}
                {testimonio.role && (
                  <p class="text-xs opacity-80">{testimonio.role}</p>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Essential for masonry layout */
  .break-inside-avoid {
    break-inside: avoid;
  }

  /* Video container styling */
  .video-container {
    position: relative;
    z-index: 1; /* Ensure clickable */
  }

  .video-container:hover {
    opacity: 0.9;
    transition: opacity 0.3s ease;
  }
</style>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  document.addEventListener("DOMContentLoaded", () => {
    // Initialize PhotoSwipe
    const lightbox = new PhotoSwipeLightbox({
      gallery: "#testimonials-gallery",
      children: ".video-container",
      pswpModule: () => import("photoswipe"),
    });
    lightbox.init();

    // Ensure videos are clickable and properly initialized
    const videoContainers = document.querySelectorAll(".video-container");
    videoContainers.forEach((container) => {
      container.addEventListener("click", (e) => {
        // Prevent click propagation issues
        e.stopPropagation();

        // Find the video element
        const video = container.querySelector("video");
        if (video) {
          if (video.paused) {
            video.play();
          } else {
            video.pause();
          }
        }
      });
    });

    // Handle video errors
    const videoElements = document.querySelectorAll("video");
    videoElements.forEach((video) => {
      video.addEventListener("error", (e) => {
        console.error("Video error:", e);
        const container = video.closest(".video-container");
        if (container) {
          const fallback = document.createElement("div");
          fallback.className = "bg-gray-200 p-4 text-center w-full h-full";
          fallback.innerHTML = "<p>Error al cargar el video</p>";
          container.replaceWith(fallback);
        }
      });
    });
  });
</script>
